<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@color/black</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/greyDark</item>
        <item name="android:statusBarColor">@color/black</item>

    </style>

    <style name="InputViewPlaceholderTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/greyDark</item>
        <item name="fontFamily">@font/atcarquette_regular</item>
        <item name="android:fontFamily">@font/atcarquette_regular</item>
        <item name="textSize" tools:ignore="SmallSp">10sp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BaseDialogFragmentStyle" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DatePickerStyle">
        <item name="android:theme">@style/DatePickerTheme</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="DatePickerTheme">
        <item name="android:textColorPrimary">@color/greyDark</item>
        <item name="colorControlNormal">@color/greyDark</item>
    </style>

    <style name="SingleLineLabelStyle" parent="TextAppearance.AppCompat">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MatchParentDimensionsViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchParentEdgesViewStyle">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="TabBarStyle" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/atcarquette_bold</item>
    </style>

    <style name="CommonButtonLabelStyle" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/atcarquette_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SessionTimerButtonLabelStyle" parent="CommonButtonLabelStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CommonButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textAppearance">@style/CommonButtonLabelStyle</item>
    </style>

    <style name="CommonLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/atcarquette_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NavBarLabelStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:fontFamily">@font/atcarquette_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/greyLight</item>
        <item name="android:fontFamily">@font/atcarquette_regular</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NavBarButtonStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="SessionTimerButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAppearance">@style/SessionTimerButtonLabelStyle</item>
        <item name="backgroundColor">@color/greyDarkExtra</item>
    </style>

    <style name="CircularAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BrightcoveControlBar.Custom">
        <item name="brightcove_full_screen">false</item>
        <item name="brightcove_rewind">false</item>
    </style>

    <style name="EmptyListLabelStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/atcarquette_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/greyDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>