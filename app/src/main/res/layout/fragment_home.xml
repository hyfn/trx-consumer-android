<?xml version="1.0" encoding="utf-8"?>
<com.trx.consumer.common.CommonView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    app:backgroundColor="@color/white"
    tools:ignore="SmallSp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.trx.consumer.common.CommonView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.trx.consumer.common.CommonView
                android:id="@+id/viewUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <com.trx.consumer.common.CommonButton
                    android:id="@+id/btnTest"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/atcarquette_bold"
                    android:gravity="center"
                    android:text="@string/home_button_test_utility_label"
                    android:textColor="@color/black"
                    app:backgroundColor="@color/yellow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.trx.consumer.common.CommonImageView
                    android:id="@+id/igmUserPhoto"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/ic_img_placeholder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearance="@style/CircularAppearance" />

                <com.trx.consumer.common.CommonLabel
                    android:id="@+id/lblUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/atcarquette_semibold"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/igmUserPhoto"
                    app:layout_constraintTop_toTopOf="@id/igmUserPhoto"
                    tools:text="Welcome, Kristoph" />

                <com.trx.consumer.common.CommonLabel
                    android:id="@+id/lblSessions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/atcarquette_bold"
                    android:maxLines="1"
                    android:textColor="@color/greyLight"
                    android:textSize="11sp"
                    app:layout_constraintStart_toEndOf="@id/igmUserPhoto"
                    app:layout_constraintTop_toBottomOf="@id/lblUserName"
                    tools:text="0 SESSIONS" />

                <com.trx.consumer.common.CommonLabel
                    android:id="@+id/lblClasses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/atcarquette_bold"
                    android:textColor="@color/greyLight"
                    android:textSize="11sp"
                    app:layout_constraintStart_toEndOf="@id/lblSessions"
                    app:layout_constraintTop_toBottomOf="@id/lblUserName"
                    tools:text="0 CLASSES" />

                <com.trx.consumer.common.CommonLabel
                    android:id="@+id/lblWorkouts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/atcarquette_bold"
                    android:textColor="@color/greyLight"
                    android:textSize="11sp"
                    app:layout_constraintStart_toEndOf="@id/lblClasses"
                    app:layout_constraintTop_toBottomOf="@id/lblUserName"
                    tools:text="0 WORKOUTS" />

            </com.trx.consumer.common.CommonView>

            <include
                android:id="@+id/viewBanner"
                layout="@layout/layout_banner_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/viewUserInfo"/>

            <include
                android:id="@+id/viewForYouTop"
                layout="@layout/layout_promotion_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/viewBanner" />

            <com.trx.consumer.common.CommonImageView
                android:id="@+id/imgLineForYouTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/greyLight"
                app:layout_constraintTop_toBottomOf="@id/viewForYouTop" />

            <include
                android:id="@+id/viewUpcoming"
                layout="@layout/layout_virtual_workout_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imgLineForYouTop" />

            <include
                android:id="@+id/viewBookWith"
                layout="@layout/layout_virtual_workout_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/viewUpcoming" />

            <com.trx.consumer.common.CommonImageView
                android:id="@+id/imgLineBookWith"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/greyLight"
                app:layout_constraintTop_toBottomOf="@id/viewBookWith" />

            <include
                android:id="@+id/viewLive"
                layout="@layout/layout_live_workout_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imgLineBookWith" />

            <com.trx.consumer.common.CommonImageView
                android:id="@+id/imgLineLive"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/greyLight"
                app:layout_constraintTop_toBottomOf="@id/viewLive" />

            <include
                android:id="@+id/viewOnDemand"
                layout="@layout/layout_video_workout_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imgLineLive" />

            <com.trx.consumer.common.CommonImageView
                android:id="@+id/imgLineOnDemand"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/greyLight"
                app:layout_constraintTop_toBottomOf="@id/viewOnDemand" />

            <include
                android:id="@+id/viewForYouBottom"
                layout="@layout/layout_promotion_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/imgLineOnDemand" />

        </com.trx.consumer.common.CommonView>

    </androidx.core.widget.NestedScrollView>


</com.trx.consumer.common.CommonView>