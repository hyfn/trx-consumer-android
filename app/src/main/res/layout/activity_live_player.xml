<?xml version="1.0" encoding="utf-8"?>
<com.trx.consumer.common.CommonView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.trx.consumer.common.CommonLabel
        android:id="@+id/lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:ellipsize="end"
        android:fontFamily="@font/atcarquette_bold"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Developer Session for Mobile" />

    <com.trx.consumer.common.CommonLabel
        android:id="@+id/lblInstructor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/atcarquette_bold"
        android:textAllCaps="true"
        android:textColor="@color/yellow"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblTitle"
        tools:text="Some Instructor" />

    <com.trx.consumer.common.CommonLabel
        android:id="@+id/lblParticipants"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/atcarquette_regular"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblInstructor"
        tools:ignore="SmallSp"
        tools:text="9 Participants" />

    <RelativeLayout
        android:id="@+id/fmPlayerContainer"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="20dp"
        android:background="@color/green"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblParticipants"/>

    <com.trx.consumer.common.CommonView
        android:id="@+id/viewSeek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@id/fmPlayerContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.trx.consumer.common.CommonLabel
            android:id="@+id/lblTimeElapsed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/atcarquette_bold"
            android:gravity="center_vertical"
            android:text="4:47"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:progress="25"
            app:layout_constraintEnd_toStartOf="@id/lblTimeRemaining"
            app:layout_constraintStart_toEndOf="@id/lblTimeElapsed" />

        <com.trx.consumer.common.CommonLabel
            android:id="@+id/lblTimeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/atcarquette_bold"
            android:gravity="center_vertical"
            android:text="-15:13"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </com.trx.consumer.common.CommonView>

    <com.trx.consumer.common.CommonView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fmPlayerContainer">

        <com.trx.consumer.common.CommonStateButton
            android:id="@+id/btnRotate"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:checkedState="@drawable/ic_img_rotate_plain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:plainState="@drawable/ic_img_rotate_plain" />

        <View
            android:id="@+id/viewOne"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/greyDarkExtra"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/viewTwo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.trx.consumer.common.CommonStateButton
            android:id="@+id/btnClock"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:checkedState="@drawable/ic_img_clock_selected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewTwo"
            app:layout_constraintStart_toEndOf="@id/viewOne"
            app:layout_constraintTop_toTopOf="parent"
            app:plainState="@drawable/ic_img_clock_plain" />

        <View
            android:id="@+id/viewTwo"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/greyDarkExtra"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/viewThree"
            app:layout_constraintStart_toEndOf="@+id/viewOne"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewThree"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/greyDarkExtra"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewTwo"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewFour"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyDarkExtra"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.trx.consumer.common.CommonStateButton
            android:id="@+id/btnParticipants"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:checkedState="@drawable/ic_participants_selected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/viewThree"
            app:layout_constraintStart_toEndOf="@id/viewTwo"
            app:layout_constraintTop_toTopOf="parent"
            app:plainState="@drawable/ic_participants_plain" />


        <com.trx.consumer.common.CommonStateButton
            android:id="@+id/btnCast"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:checkedState="@drawable/ic_img_share_selected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/viewThree"
            app:layout_constraintTop_toTopOf="parent"
            app:plainState="@drawable/ic_img_share_plain" />

    </com.trx.consumer.common.CommonView>

    <com.trx.consumer.common.CommonButton
        android:id="@+id/btnClose"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/atcarquette_semibold"
        android:gravity="center"
        android:text="@string/player_end_workout_button_label"
        android:textColor="@color/greyLightExtra"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:outline="@color/greyLightExtra" />

</com.trx.consumer.common.CommonView>